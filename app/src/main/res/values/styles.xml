<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="ArticleTitle">
        <item name="android:fontFamily">@font/bebas_regular</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ArticleData">
        <item name="android:fontFamily">@font/bebas_regular</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="AppTitle">
        <item name="android:fontFamily">@font/bebas_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30dp</item>
    </style>

    <style name="TabText" parent="TextAppearance.Design.Tab">
        <item name="fontFamily">@font/bebas_regular</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="Button">
        <item name="android:fontFamily">@font/bebas_regular</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="NavigationItems" parent="Widget.MaterialComponents.TabLayout">
        <item name="fontFamily">@font/bebas_regular</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="LoginTitle">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/bebas_regular</item>
        <item name="android:textSize">40dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="ToolBarArrow" parent="AppTheme">
        <item name="android:textColorSecondary">@color/white</item>
    </style>

</resources>